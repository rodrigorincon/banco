<div class="center">
	<h1>
		<strong>Minha Conta:</strong>
	</h1>
	<h3>
		<strong>Agência:</strong> <%= @account.agency %> <br>
		<strong>Conta:</strong> <%= @account.bank_account %> <br>
	</h3>
</div>

<section>
	<strong>Saldo </strong>
	<h2>
  		<%= number_to_currency(@account.money) %>
	</h2>
</section>

<% unless @account.errors.messages.empty? %>
	<%= render "devise/shared/error_messages", resource: @account %>
<% end %>

<section>
	<strong>Saque </strong>
	<%= render partial: "withdraw" %>
</section>

<section>
	<strong>Depósito </strong>
	<%= render partial: "deposit" %>
</section>
