<ul id="menu-main" class="border" >
	<%- if controller_name != 'sessions' %>
		<li> <%= link_to "Entrar", new_session_path(resource_name), :class => 'navbar-link' %> </li>
	<% end %>

	<%- if devise_mapping.registerable? && controller_name != 'registrations' %>
		<li> <%= link_to "Cadastrar", new_registration_path(resource_name), :class => 'navbar-link' %> </li>
	<% end %>

	<%- if devise_mapping.recoverable? && controller_name != 'passwords' && controller_name != 'registrations' %>
		<li> <%= link_to "Esqueceu sua senha?", new_password_path(resource_name), :class => 'navbar-link' %> </li>
	<% end %>
</ul>
<br>