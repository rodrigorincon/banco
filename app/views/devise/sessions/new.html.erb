<div class="unlogged-title">
  <h2>Entrar</h2>
</div>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  
  <section>
    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label "Senha" %>
      <%= f.password_field :password, autocomplete: "Senha" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %> Manter conectado
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Entrar", class: "btn btn-primary" %>
    </div>

  </section>
<% end %>
