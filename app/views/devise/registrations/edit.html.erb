<h1><strong>Editar Conta</strong></h1>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f| %>
  <%= render "devise/shared/error_messages", resource: resource %>
  
  <section style="width: 20%;">
    <div class="field">
      <%= f.label :name %>
      <%= f.text_field :name, autofocus: true, autocomplete: "nome" %>
    </div>

    <div class="field">
      <%= f.label :email %>
      <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
    </div>

    <div class="field">
      <%= f.label :password %> 
      <%= f.password_field :password, autocomplete: "nova senha" %>
      <% if @minimum_password_length %>
        <em>Mínimo de <%= @minimum_password_length %> caracteres</em>
      <% end %>
    </div>

    <div class="field">
      <%= f.label "confirmar senha" %>
      <%= f.password_field :password_confirmation, autocomplete: "nova senha" %>
    </div>

    <div class="field">
      <%= f.label "senha atual" %> <i>(É necessário sua senha atual para confirmar alterações)</i> <br>
      <%= f.password_field :current_password, autocomplete: "senha atual" %>
    </div>

    <div class="actions">
      <%= f.submit "Atualizar", class: "btn btn-primary" %>
    </div>
  </section>
<% end %>
